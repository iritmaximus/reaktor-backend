{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist/",
    "rootDir": "./src",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
      "esm": true, // «———— enabling ESM for ts-node
  }
}
